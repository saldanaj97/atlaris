# Maintenance Mode
# Set to 'true' to enable maintenance mode and display the maintenance page to all users
# Set to 'false' or remove to disable maintenance mode
MAINTENANCE_MODE=false

# Database Configuration
# Pooled connection URL for application queries
DATABASE_URL=

# Non-pooled connection URL for migrations and admin tasks
DATABASE_URL_NON_POOLING=

# Clerk Authentication
# Get these from your Clerk dashboard: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk JWKS URL for pg_session_jwt (required in production)
# Example: https://clerk.YOUR_DOMAIN.com/.well-known/jwks.json
# CLERK_JWKS_URL=

# Clerk Webhook Secret (optional)
# CLERK_WEBHOOK_SECRET=

# Stripe Payment Integration
# Get these from your Stripe dashboard: https://dashboard.stripe.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# AI Provider Configuration
# Options: 'openai', 'anthropic', 'mock'
# Use 'mock' for testing without API calls
AI_PROVIDER=openai

# OpenAI Configuration (if using OpenAI as AI_PROVIDER)
# OPENAI_API_KEY=

# Anthropic Configuration (if using Anthropic as AI_PROVIDER)
# ANTHROPIC_API_KEY=

# OAuth Integration
# Encryption key for OAuth tokens (generate a random 32-byte hex string)
OAUTH_ENCRYPTION_KEY=

# YouTube API Integration
# Get this from Google Cloud Console: https://console.cloud.google.com
YOUTUBE_API_KEY=

# Development & Testing
# User ID for development/testing purposes
# DEV_CLERK_USER_ID=

# Testing Configuration
# Control mock generation behavior in tests
# MOCK_GENERATION_DELAY_MS=0
# MOCK_GENERATION_FAILURE_RATE=0
# MOCK_GENERATION_SEED=42

# Database Testing
# Safety flags for test database operations
# SKIP_DB_TEST_SETUP=false
# ALLOW_DB_TRUNCATE=false

# Performance Testing
# PERF_CLERK_USER_ID=
# PERF_USER_EMAIL=
# PERF_ITERATIONS=30

# Environment
NODE_ENV=development
